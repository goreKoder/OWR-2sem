{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"types": ["node"], // Автоматически подключает @types/node
    	"typeRoots": [
    	  "./node_modules/@types", // Стандартный путь
    	  "./src/types"            // Ваши кастомные типы
    	],
		"baseUrl": "./",
		"paths": {
		  	"@config/*": ["src/config/*"],
		  	"@routes/*": ["src/routes/*"],
		  	"@SQLtables/*": ["src/SQLtables/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
